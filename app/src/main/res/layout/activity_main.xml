<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bglanding"
    tools:context=".Activities.MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="72dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/selamat_datang_di"
                android:textColor="@color/fontwhite"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="135dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/img_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ss1"
                android:layout_marginTop="40dp"
                app:layout_constraintHorizontal_bias="1.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="@drawable/bg_layout_white"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_kasus_corona_virus_ndi_indonesia"
                    android:textSize="18sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/bg"
                    android:fontFamily="@font/roboto_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terakhir_update_tanggal_19_juni_2020"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/roboto" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    style="@style/Responsive"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_linear_positif">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_kasus_positif"
                        android:textSize="16sp"
                        android:textColor="@color/fontwhite"
                        android:fontFamily="@font/roboto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36.406"
                        android:id="@+id/tv_positif"
                        android:layout_marginTop="8dp"
                        android:textSize="32sp"
                        android:textColor="@color/fontwhite"
                        android:fontFamily="@font/roboto_bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="172dp"
                        android:layout_height="82dp"
                        android:gravity="center"
                        android:background="@drawable/bg_btn_red"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meninggal"
                            android:textSize="16sp"
                            android:textColor="@color/fontwhite"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.048"
                            android:id="@+id/tv_meninggal"
                            android:layout_marginTop="8dp"
                            android:textSize="20sp"
                            android:textColor="@color/fontwhite"
                            android:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="172dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:background="@drawable/bg_btn_green"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sembuh"
                            android:textSize="16sp"
                            android:textColor="@color/fontwhite"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13.213"
                            android:id="@+id/tvsembuh"
                            android:layout_marginTop="8dp"
                            android:textSize="20sp"
                            android:textColor="@color/fontwhite"
                            android:fontFamily="@font/roboto_bold" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    style="@style/Responsive">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Provinsi Terbanyak"
                                android:textSize="18sp"
                                android:textColor="@color/bg"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:id="@+id/tv_lihat_semua"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:gravity="end"
                                android:textColor="@color/bg"
                                android:text="@string/lihat_semua"
                                android:textSize="14sp" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="16dp"
                    style="@style/Responsive"
                    android:background="@drawable/bg_btn_linear_kasus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/provinsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dki_jakarta"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/roboto_bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        style="@style/Compatible"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="105dp"
                            android:layout_height="70dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_btn_kasus">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/positif"
                                android:textColor="#828282"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto" />

                            <TextView
                                android:id="@+id/positif"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8.650"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="105dp"
                            android:layout_height="70dp"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:background="@drawable/bg_btn_kasus">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/meninggal"
                                android:textColor="#828282"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto" />

                            <TextView
                                android:id="@+id/meninggal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="537"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="105dp"
                            android:layout_height="70dp"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:background="@drawable/bg_btn_kasus">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sembuh"
                                android:textColor="#828282"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto" />

                            <TextView
                                android:id="@+id/sembuh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="3.661"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_bold" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="false"
        app:itemIconTint="@drawable/bottom_navbar_selector"
        app:itemTextColor="@drawable/bottom_navbar_selector"
        android:background="@android:color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>